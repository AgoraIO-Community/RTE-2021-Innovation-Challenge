<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/liner_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:src="@mipmap/imgs"/>

    <TextView
        android:id="@+id/liner_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/liner_icon"
        android:layout_toStartOf="@+id/liner_back"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="@string/app_name"/>

    <ImageView
        android:id="@+id/liner_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/mg_10"
        android:layout_marginEnd="2dp"
        android:src="@drawable/ic_arrow_forward" />

    <View
        android:id="@+id/liner_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/liner_icon"
        android:layout_marginEnd="5dp"
        android:background="@color/text_light_grey_half"/>

</RelativeLayout>