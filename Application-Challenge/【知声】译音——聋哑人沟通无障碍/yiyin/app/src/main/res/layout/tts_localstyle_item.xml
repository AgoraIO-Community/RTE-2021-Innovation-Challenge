<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="36dp" >

    <TextView
        android:id="@+id/tv_download"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_width="20dp"
        android:layout_centerVertical="true"
        android:background="@drawable/download_state"
        android:layout_height="20dp"/>

    <ImageView
        android:id="@+id/delete_model"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="6dp"
        android:padding="2dp"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/tv_download"
        app:srcCompat="@drawable/translate_delete_model" />

    <TextView
        android:id="@+id/speaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textSize="12sp"
        android:text="" />

    <TextView
        android:id="@+id/has_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@id/speaker"
        android:layout_toStartOf="@id/delete_model"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textSize="10sp"
        android:text="" />



</RelativeLayout>