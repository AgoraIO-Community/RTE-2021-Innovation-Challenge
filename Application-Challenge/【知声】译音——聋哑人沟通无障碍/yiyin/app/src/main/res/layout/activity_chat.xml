<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg"
    tools:context=".ChatActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mg_150"
        android:orientation="vertical"
        android:gravity="center">
        <ImageButton
            android:id="@+id/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/button"
            android:background="@color/transparent"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_other"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:padding="@dimen/mg_10"
        android:textColor="@color/black"
        android:textSize="@dimen/tx_size_20" />

    <TextView
        android:id="@+id/tv_mine"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="@dimen/tx_size_20"
        android:rotation="180"
        android:text=""
        android:padding="@dimen/mg_10"
        android:layout_marginTop="@dimen/mg_5"
        android:background="@color/white"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mg_70"
        android:padding="@dimen/mg_10"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_speak"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="@dimen/tx_size_16"
            android:textColor="@color/black"
            android:paddingStart="@dimen/mg_5"
            android:paddingEnd="@dimen/mg_5"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:hint="@string/et_speack_hint"
            android:background="@drawable/load_progress_bg"/>
        <ImageButton
            android:id="@+id/bt_delete"
            android:layout_width="@dimen/mg_70"
            android:layout_height="@dimen/mg_50"
            android:layout_marginStart="@dimen/mg_10"
            android:layout_marginEnd="@dimen/mg_10"
            android:background="@drawable/shape_black"
            android:src="@mipmap/dele"/>
        <ImageButton
            android:id="@+id/bt_speak"
            android:layout_width="@dimen/mg_70"
            android:layout_height="@dimen/mg_50"
            android:background="@drawable/shape_black"
            android:src="@mipmap/speak"/>
    </LinearLayout>
</LinearLayout>