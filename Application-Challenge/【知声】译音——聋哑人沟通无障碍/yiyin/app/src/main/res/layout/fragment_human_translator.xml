            android:layout_height="@dimen/mg_50"
            android:textColor="@color/black"
            android:textSize="@dimen/tx_size_16"
            android:text="@string/text_sy_fy_zy_kf"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/mg_20"
