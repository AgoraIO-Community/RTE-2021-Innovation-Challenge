<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="fill_vertical"
    android:layout_marginBottom="?attr/actionBarSize"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/main_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--畅听电话拨号-->
        <mobi.yiyin.view.LinerView
            android:id="@+id/lv_call"
            app:liner_icon_url="@drawable/ic_baseline_dialer_sip_24"
            app:liner_title="畅听电话拨号"
            style="@style/LinerView"
            />

        <!--畅听电话拨号记录-->
        <mobi.yiyin.view.LinerView
            android:id="@+id/lv_call_history"
            app:liner_icon_url="@drawable/ic_baseline_history_24"
            app:liner_title="拨打记录"
            style="@style/LinerView"
            />

        <mobi.yiyin.view.LinerView
            android:id="@+id/lv_people"
            style="@style/LinerView"
            app:liner_icon_url="@drawable/ic_baseline_people_24"
            app:liner_title="名人录" />

        <TextView
