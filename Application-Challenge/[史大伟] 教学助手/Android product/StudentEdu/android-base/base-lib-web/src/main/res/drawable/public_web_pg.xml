<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dp" />
            <gradient
                android:angle="270"
                android:centerColor="@color/lib_color_ivory"
                android:endColor="@color/lib_color_lightyellow"
                android:startColor="@color/lib_color_white" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dp" />
                <gradient
                    android:centerColor="@color/lib_color_moccasin"
                    android:endColor="@color/lib_color_navajowhite"
                    android:startColor="@color/lib_color_bisque" />

            </shape>
        </clip>
    </item>

</layer-list>