<?xml version="1.0" encoding="utf-8"?>
<com.kangraoo.basektlib.widget.toolsbar.LibToolBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="75dp"
    android:background="@color/color_white"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp">
    <ImageView
        android:id="@id/lib_toolbar_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:padding="10dp"
        android:src="@mipmap/public_common_icon_back_grey"
        />

    <TextView
        android:id="@id/lib_toolbar_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:textSize="15sp"
        android:visibility="gone"
        android:paddingLeft="10dp"/>


    <TextView
        android:id="@id/lib_toolbar_title"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="@color/color_333333"
        tools:text="124"
        android:textSize="20sp"/>
    <TextView
        android:id="@id/lib_toolbar_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:textSize="15sp"
        android:paddingRight="8dp"/>

</com.kangraoo.basektlib.widget.toolsbar.LibToolBar>