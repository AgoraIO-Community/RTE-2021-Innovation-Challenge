<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.kangaroo.studentedu.ui.activity.LoginActivity">

    <include
        layout="@layout/lib_include_titlebar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="教学助手"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:textColor="@color/lib_color_mediumslateblue"
        android:layout_marginTop="40dp"
        android:textSize="22sp"
        />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="身份"
        android:textSize="17sp"
        android:textColor="@color/lib_color_darkgrey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        android:layout_marginTop="60dp"
        android:layout_marginStart="40dp"

        />

    <TextView
        android:id="@+id/spinner"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        android:layout_marginEnd="40dp"
        app:lib_corners_radius="4dp"
        app:lib_stroke_color="@color/lib_color_mediumslateblue"
        app:lib_stroke_width="1dp"
        app:lib_pressed_drawable="@color/lib_color_darkgrey"
        app:lib_unpressed_drawable="@color/white"
        android:textColor="@color/lib_color_black"
        android:text="请选择身份"
        android:textSize="17dp"
        android:paddingStart="10dp"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="姓名"
        android:textSize="17sp"
        android:textColor="@color/lib_color_darkgrey"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />


    <TextView
        android:id="@+id/spinner2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:lib_corners_radius="4dp"
        app:lib_stroke_color="@color/lib_color_mediumslateblue"
        app:lib_stroke_width="1dp"
        app:lib_pressed_drawable="@color/lib_color_darkgrey"
        app:lib_unpressed_drawable="@color/white"
        android:text="请选择登录人"
        android:textColor="@color/lib_color_black"
        android:textSize="17dp"
        android:paddingStart="10dp"
        android:gravity="center_vertical"
        />



    <Button
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="50dp"
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="17dp"
        app:lib_corners_radius="3dp"
        app:lib_pressed_drawable="#9DD1F6"
        app:lib_shape="rectangle"
        app:lib_stroke_width="1dp"
        app:lib_unenabled_drawable="#9DD1F6"
        app:lib_unpressed_drawable="#1B82D1"/>
