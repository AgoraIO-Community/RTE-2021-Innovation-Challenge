<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground">

    <com.zhy.android.percent.support.PercentRelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">

            <com.zhy.android.percent.support.PercentFrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/city"
                app:layout_heightPercent="48%w">

            </com.zhy.android.percent.support.PercentFrameLayout>

            <com.zhy.android.percent.support.PercentFrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#ffffff"
                app:layout_heightPercent="20%w">

                <com.zhy.android.percent.support.PercentFrameLayout
                    android:layout_width="150dp"
                    android:layout_height="0dp"
                    android:layout_gravity="bottom|center"
                    app:layout_heightPercent="5%w">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="#999999">

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="#ffffff"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/name"
                        android:textColor="#434343"
                        android:textStyle="bold" />
                </com.zhy.android.percent.support.PercentFrameLayout>
            </com.zhy.android.percent.support.PercentFrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center"
                android:text="梅岭苑13栋5单元601室"
                android:textColor="#BCBCBC"
                android:textSize="12sp" />

            <com.zhy.android.percent.support.PercentFrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="25%w">

                <LinearLayout
                    android:layout_width="270dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <LinearLayout style="@style/mainButton">

                        <LinearLayout
                            android:id="@+id/main_door"
                            style="@style/mainButton.frame"
                            android:layout_width="match_parent">

                            <FrameLayout

                                style="@style/mainButton.imageBg">

                                <ImageView
                                    style="@style/mainButton.image"
                                    android:layout_width="20dp"

                                    android:src="@drawable/map" />

                            </FrameLayout>

                            <TextView
                                style="@style/mainButton.text"
                                android:text="门禁查看" />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout style="@style/mainButton">

                        <LinearLayout
                            android:id="@+id/main_setting"
                            style="@style/mainButton.frame"
                            android:layout_width="match_parent">

                            <FrameLayout style="@style/mainButton.imageBg">

                                <ImageView
                                    style="@style/mainButton.image"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/set" />

                            </FrameLayout>

                            <TextView
                                style="@style/mainButton.text"
                                android:text="个人设置" />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout style="@style/mainButton">

                        <LinearLayout
                            android:id="@+id/main_users"
                            style="@style/mainButton.frame"
                            android:layout_width="match_parent">

                            <FrameLayout style="@style/mainButton.imageBg">

                                <ImageView
                                    style="@style/mainButton.image"
                                    android:src="@drawable/person" />

                            </FrameLayout>

                            <TextView
                                style="@style/mainButton.text"
                                android:text="关联用户" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.zhy.android.percent.support.PercentFrameLayout>
            <com.zhy.android.percent.support.PercentFrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="30%w"
                app:layout_marginEndPercent="1%w">

                <LinearLayout
                    android:layout_width="270dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <LinearLayout style="@style/mainButton">

                        <LinearLayout
                            android:id="@+id/main_note"
                            style="@style/mainButton.frame"
                            android:layout_width="match_parent">

                            <FrameLayout style="@style/mainButton.imageBg">

                                <ImageView
                                    style="@style/mainButton.image"
                                    android:layout_width="20dp"
                                    android:src="@drawable/note" />

                            </FrameLayout>

                            <TextView
                                style="@style/mainButton.text"
                                android:layout_height="wrap_content"
                                android:text="出入记录" />


                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout style="@style/mainButton">

                        <LinearLayout
                            android:id="@+id/main_camer"
                            style="@style/mainButton.frame"
                            android:layout_width="match_parent">

                            <FrameLayout style="@style/mainButton.imageBg">

                                <ImageView
                                    style="@style/mainButton.image"
                                    android:src="@drawable/shuaface" />

                            </FrameLayout>

                            <TextView
                                style="@style/mainButton.text"
                                android:text="刷脸体验" />


                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout style="@style/mainButton">

                        <LinearLayout
                            android:id="@+id/main_pass"
                            style="@style/mainButton.frame"
                            android:layout_width="match_parent">

                            <FrameLayout style="@style/mainButton.imageBg">

                                <ImageView
                                    style="@style/mainButton.image"
                                    android:layout_width="20dp"
                                    android:src="@drawable/temp" />

                            </FrameLayout>

                            <TextView
                                style="@style/mainButton.text"
                                android:text="一次性码" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.zhy.android.percent.support.PercentFrameLayout>
            <com.zhy.android.percent.support.PercentFrameLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/colorBackground">

            </com.zhy.android.percent.support.PercentFrameLayout>

            <com.zhy.android.percent.support.PercentFrameLayout
                android:id="@+id/main_news"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:clickable="true"
                android:onClick="onClick"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:text="出入动态"
                    android:textColor="#333333"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/jiantou">

                </ImageView>

            </com.zhy.android.percent.support.PercentFrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="#ffffff"
                android:text="今日记录|14条"
                android:textColor="@color/yellow"
                android:textSize="10sp" />

            <com.zhy.android.percent.support.PercentFrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="20%w">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/jin"
                    app:layout_marginLeftPercent="5%w"
                    app:layout_widthPercent="10%w" />

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    app:layout_widthPercent="83%w"
                    android:orientation="vertical">

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_marginTopPercent="20%h">
                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_widthPercent="70%w"
                            android:layout_weight="1"
                            android:text="访客123"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="30分钟前"
                            android:textColor="#aeaeae"
                            app:layout_widthPercent="30%w" />

                    </com.zhy.android.percent.support.PercentLinearLayout>


                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="东1门 进入小区"
                        android:textColor="#aeaeae"
                        android:textSize="10sp" />
                    <android.support.v7.widget.ContentFrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#aeaeae"
                        app:layout_marginBottomPercent="10%h"
                        app:layout_widthPercent="90%w" >
                    </android.support.v7.widget.ContentFrameLayout>
                </com.zhy.android.percent.support.PercentLinearLayout>


            </com.zhy.android.percent.support.PercentFrameLayout>
            <com.zhy.android.percent.support.PercentFrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="20%w">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/jin"
                    app:layout_marginLeftPercent="5%w"
                    app:layout_widthPercent="10%w" />

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    app:layout_widthPercent="83%w"
                    android:orientation="vertical">

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_marginTopPercent="20%h">
                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_widthPercent="70%w"
                            android:layout_weight="1"
                            android:text="访客123"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="30分钟前"
                            android:textColor="#aeaeae"
                            app:layout_widthPercent="30%w" />

                    </com.zhy.android.percent.support.PercentLinearLayout>


                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="东1门 进入小区"
                        android:textColor="@color/grey"
                        android:textSize="10sp" />
                    <android.support.v7.widget.ContentFrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/grey"
                        app:layout_marginBottomPercent="10%h"
                        app:layout_widthPercent="90%w" >
                    </android.support.v7.widget.ContentFrameLayout>
                </com.zhy.android.percent.support.PercentLinearLayout>


            </com.zhy.android.percent.support.PercentFrameLayout>



        </com.zhy.android.percent.support.PercentLinearLayout>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/main_touxiang"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/touxiang"
            app:civ_border_color="#ffffff"
            app:civ_border_width="4dp"
            app:layout_heightPercent="24%w"
            app:layout_marginLeftPercent="38%w"
            app:layout_marginTopPercent="36%w"
            app:layout_widthPercent="24%w">
        </de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_marginLeftPercent="5%w"
            app:layout_marginTopPercent="4%w"
            android:text="已入住"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            app:layout_marginLeftPercent="5%w"
            app:layout_marginTopPercent="7%w">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="365"
                android:textColor="@color/white"
                android:textSize="36sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/yellow"
                android:text="天"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_marginLeftPercent="5%w"
            app:layout_marginTopPercent="21%w"
            android:text="可随行人数：0"/>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:onClick="onClickMessage"
                android:src="@drawable/mesg"
                app:layout_heightPercent="7%w"
                app:layout_marginRightPercent="2%w"
                app:layout_marginTopPercent="4%w" />
        </com.zhy.android.percent.support.PercentLinearLayout>


    </com.zhy.android.percent.support.PercentRelativeLayout>
</ScrollView>

