<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainMenuLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/Picture_bt"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/picture_bt_selector"
        android:onClick="open_picture" />

    <Button
        android:id="@+id/Video_bt"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_below="@+id/Picture_bt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/video_bt_selector"
        android:onClick="open_video" />

    <Button
        android:id="@+id/Sound_bt"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_below="@+id/Video_bt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/audio_bt_selector"
        android:onClick="open_sound" />
</RelativeLayout>